<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<VBox fx:id="root"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.cupid404.ui.componentControllers.RestaurantCardController"
      prefWidth="300" prefHeight="400"
      stylesheets="@../css/RestaurantCardStylesheet.css"
      styleClass="main">

    <!-- Card container -->
    <VBox styleClass="card" spacing="10" alignment="CENTER">

        <!-- Image -->
        <ImageView fx:id="cardImage" fitWidth="280" fitHeight="180" styleClass="card-img"/>

        <!-- Content -->
        <VBox styleClass="card-content" spacing="5" alignment="CENTER">
            <HBox spacing="100"/>
            <Label fx:id="titleLabel"   styleClass="title"/>
            <Label fx:id="addressLabel" styleClass="address"/>
            <Label fx:id="priceLabel"   styleClass="price"/>

            <!-- Footer -->
            <Label fx:id="ratingLabel"   styleClass="rating"/>
        </VBox>
    </VBox>
</VBox>
